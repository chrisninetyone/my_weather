<% require "json" %>
<% require "time" %>

<% if @response %>
  <div class="weather-container">

    <div class="banner">
      <h2>Weather in <%= @response["name"] %></h2>
    </div>

    <div class="section weather-top">
      <% icon_id =  @response["weather"][0]["icon"] %>
      <%= image_tag("icons/#{icon_id}.png") %><br>
      <h2><b><%= @response["main"]["temp"].round() %>째</b></h2>
      <h2><%= @response["weather"][0]["main"] %></h2>
      <i><%#= @response["weather"][0]["description"] #%></i><br>
    </div>

    <div class="section temp">
      <p class="p2">Feels like <b><%= @response["main"]["feels_like"].round() %>째</b></p>
      <br>
      <div class="min-max">
        <div>
          <%= image_tag("icons/down-arrow.png", class: 'icon') %> <b><%= @response["main"]["temp_min"].round() %>째</b>
        </div>
        <div>
          <%= image_tag("icons/up-arrow.png", class: 'icon') %> <b><%= @response["main"]["temp_max"].round() %>째</b>
        </div>
      </div>
      <br>
      <p class="p3">Pressure at <%= @response["main"]["pressure"] %> hPa</p>
      <br>
      <p class="p3">Humidity at <%= @response["main"]["humidity"] %>%</p>
      <br>
    </div>

    <div class="section">
      <% utc_offset = Time.zone_offset('EST') %>
      <% sunrise_time = Time.at(@response["sys"]["sunrise"]).utc.in_time_zone('America/New_York') %>
      <% sunrise_time = sunrise_time.strftime("%I:%M %p")  %>
      <% sunset_time = Time.at(@response["sys"]["sunset"]).utc.in_time_zone('America/New_York') %>
      <% sunset_time = sunset_time.strftime("%I:%M %p")  %>
      <div class="sunrise-sunset">
        <%= image_tag("icons/sunrise.png") %> <b><%= sunrise_time %></b>
        <%= image_tag("icons/sunset.png") %> <b><%= sunset_time %></b>
      </div>
    </div>

    <% if @response["clouds"] %>
      <div class="section">
        <%= @response["clouds"]["all"] %>% cloud coverage
      </div>
    <% end %>

    <% if @response["wind"] %>
      <div class="section">
        <%= @response["wind"]["speed"] %> MPH winds at <%= @response["wind"]["deg"] %> degrees<br>
      </div>
    <% end %>

    <% if @response["rain"] %>
      <div class="section">
        Rained <%= @response["rain"]["1h"] %>mm in the last hour.
        <% if @response["rain"]["3h"] %>
          <%= @response["rain"]["3h"] %>mm in the last 3 hours.
        <% end %>
      </div>
    <% end %>

    <% if @response["snow"] %>
      <div class="snow">
        Snowed <%= @response["snow"]["1h"] %>mm in the last hour.
        <% if @response["snow"]["3h"] %>
          <%= @response["snow"]["3h"] %>mm in the last 3 hours.
        <% end %>
      </div>
    <% end %>

  </div>
<% end %>